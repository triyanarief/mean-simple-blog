            return $http.put(url, <%= relatedEntityName%>s);
        }
        function get<%= relatedEntityNameCapitalize %>s(<%= entityName %>Id, <%= relatedEntityName%>s) {
            var url = "/wax/<%= applicationName %>/api/<%= entityName %>/" + <%= entityName %>Id + "/<%= relatedEntityName%>/map";
