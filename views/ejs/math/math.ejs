<h1>Solve the Following Systems of Equations</h1>

<%
    function pr(v, o) {
        v = "<em>"+v+"</em>";
        var ewq = Math.round(Math.random() * 10) - 5;
        if(ewq == 0) {
            return "";
        }
        if(ewq == 1) {
            if(o == 1) {
                return v;
            } else {
                return "+ " + v;
            }
        }
        if(ewq == -1) {
            if(o == 1) {
                return "-" + v;
            } else {
                return "&mdash; " + v;
            }
        }
        if(o == 1) {
            return ewq + v;
        } else {
            if(ewq > 0) {
                return "+ " + ewq + v;
            } else {
                return "&mdash; " + (ewq * -1) + v;
            }
        }
    }

    for(var i=0; i<10; i++) {
        var x = pr("x", 1);
        var y = pr("y", 2);
        var a = pr("x", 1);
        var b = pr("y", 2);
    %>
        <%- x %> <%- y %> = <%= Math.round(Math.random() * 10) - 5 %>
        <br/>
        <%- a %> <%- b %> = <%= Math.round(Math.random() * 10) - 5 %>
        <hr/>
<%}%>
